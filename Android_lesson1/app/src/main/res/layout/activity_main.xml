<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25px"
    android:background="#FFF8DC"
    tools:context=".MainActivity"
    android:orientation="vertical"
    tools:ignore="ExtraText,UseSwitchCompatOrMaterialXml">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Создай своего героя"
        android:gravity="center_horizontal"
        android:padding="15px"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#191970"
        android:textStyle="italic"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:fontFamily="sans-serif-black"
        android:textColor="#800000"
        android:layout_marginBottom="20dp"
        android:text="Введи имя своего героя:"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-black"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:fontFamily="sans-serif-black"
        android:textColor="#800000"
        android:layout_marginBottom="20dp"
        android:text="У героя амнезия"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:fontFamily="sans-serif-black"
        android:textColor="#800000"
        android:layout_marginBottom="20dp"
        android:text="Выбери пол героя"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_marginBottom="20dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="sans-serif-black"
            android:textColor="#000080"
            android:layout_marginRight="150dp"
            android:text="Мужчина"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="sans-serif-black"
            android:textColor="#DA70D6"
            android:text="Женщина"/>
    </LinearLayout>

    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:textColor="#000000"
        android:background="#F0E68C"
        android:textOn="Задать характеристики героя вручную"
        android:textOff="Задать характеристики герою случайно"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:text="Создать этого героя!" />
</LinearLayout>